{
  "name": "typescript-rollup-jest",
  "version": "0.0.1",
  "author": "Dan Elder",
  "engines": {
    "node": ">=12.14.0",
    "npm": "~6.13.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danielelder/typescript-rollup-jest.git"
  },
  "description": "Typescript starter project with Rollup and Jest",
  "license": "ISC",
  "scripts": {
    "build": "run-s clean test build_copy build_js",
    "build_copy": "copyfiles -u 3 src/components/**/*.ts dist/modules -e src/**/*.test.ts",
    "build_js": "rollup -c",
    "serve": "run-s clean serve_html serve_local",
    "serve_html": "node bin/wrap-html.js",
    "serve_local": "run-p serve_js serve_livereload serve_httpserver",
    "serve_js": "NODE_ENV=development rollup -c -w",
    "serve_livereload": "livereload dist",
    "serve_httpserver": "http-server ./dist -o -d false",
    "test": "run-s test_lint test_coverage",
    "test_lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test_coverage": "jest --coverage",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.0",
    "@rollup/plugin-typescript": "^2.0.1",
    "@types/jest": "^24.0.25",
    "copyfiles": "^2.1.1",
    "glob": "^7.1.6",
    "http-server": "^0.12.0",
    "jest": "^24.9.0",
    "livereload": "^0.8.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.14",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  }
}
